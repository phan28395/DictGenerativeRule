{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DictionaryEntry",
  "type": "object",
  "required": ["word", "pos", "inflections", "pos_frequency", "meanings"],
  "properties": {
    "word": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "pos": {
      "type": "string",
      "const": "noun"
    },
    "inflections": {
      "type": "object",
      "required": ["plural", "possessive"],
      "properties": {
        "plural": {
          "type": "string"
        },
        "possessive": {
          "type": "string"
        },
        "possessive_plural": {
          "type": "string"
        },
        "irregular": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "pos_frequency": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "meanings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id", 
          "definition", 
          "domain", 
          "register", 
          "countability", 
          "semantic_category", 
          "emoji", 
          "collocations", 
          "synonyms", 
          "examples"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "definition": {
            "type": "string",
            "minLength": 10,
            "maxLength": 150
          },
          "domain": {
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
              "type": "string",
              "enum": [
                "general", "academic", "business", "technology", "science",
                "medicine", "legal", "politics", "philosophy", "psychology",
                "education", "sports", "arts", "music", "literature",
                "religion", "social", "economics", "engineering", "mathematics",
                "biology", "chemistry", "physics", "geography", "history",
                "food", "fashion", "military", "maritime", "aviation"
              ]
            }
          },
          "register": {
            "type": "string",
            "enum": ["formal", "informal", "neutral", "technical", "literary", "slang"]
          },
          "countability": {
            "type": "object",
            "required": ["type", "special"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["C", "UC", "C/UC"]
              },
              "special": {
                "type": "boolean"
              }
            }
          },
          "semantic_category": {
            "type": "string",
            "maxLength": 30
          },
          "emoji": {
            "type": "string",
            "pattern": "^\\p{Emoji}$"
          },
          "collocations": {
            "type": "object",
            "required": ["adjective_noun", "noun_verb"],
            "properties": {
              "adjective_noun": {
                "type": "array",
                "minItems": 2,
                "maxItems": 5,
                "items": {
                  "type": "string"
                }
              },
              "noun_verb": {
                "type": "array",
                "minItems": 2,
                "maxItems": 5,
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "synonyms": {
            "type": "array",
            "minItems": 2,
            "maxItems": 5,
            "items": {
              "type": "string"
            }
          },
          "examples": {
            "type": "array",
            "minItems": 3,
            "maxItems": 5,
            "items": {
              "type": "string",
              "minLength": 15,
              "maxLength": 80
            }
          }
        }
      }
    }
  }
}